{
  "manifest_version": 2,

  "name": "Mastodon Share",
  "description": "Un bouton de partage social pour les instances Mastodon",
  "version": "0.2.1",
  "options_page": "options.html",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["core.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "storage"
  ]
}
