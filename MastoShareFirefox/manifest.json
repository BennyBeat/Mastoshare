{
  "manifest_version": 2,
  "applications": {
    "gecko":{
      "id": "{09b14d46-21c3-4a7d-b244-e756f497935b}",
      "strict_min_version": "42.0"
    }
  },
  "name": "Mastodon Share",
  "description": "Un bouton de partage social pour les instances Mastodon",
  "version": "0.2.1",
  "options_ui": {
    "page": "options.html"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["core.js"]
    }
  ],
  "background" : {
    "scripts": ["menu.js"]
  },
  "permissions": [
    "https://frama.link/*",
    "https://*/*",
    "http://*/*",
    "contextMenus",
    "activeTab",
    "storage"
  ],
  "icons": {
    "16": "icon16.png"
  }
}
