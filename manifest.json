{
  "manifest_version": 2,

  "name": "Mastodon Share",
  "description": "Un plugin de partage social pour les instances Mastodon",
  "version": "0.2",
  "options_page": "options.html",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["core.js"]
    }
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "<all_urls>"
  ]
}
